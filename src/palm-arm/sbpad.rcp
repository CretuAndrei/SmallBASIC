FORM SBPREF_FORM 2 16 156 140
USABLE
MODAL
BEGIN
    TITLE "Options"

	LABEL "Charset" ID 2999 6 16
	POPUPTRIGGER "- Charset -" ID trgCHAR AT (50 16 100 AUTO) LEFTANCHOR
	LIST "European (UTF8)" "Japanese (SJIS)" "Chinese (BIG5)" "Generic multibyte" ID lstCHAR AT (PrevLeft PrevTop 100 1) NONUSABLE VISIBLEITEMS 4
	POPUPLIST ID trgCHAR lstCHAR

	CHECKBOX "Delete logfile at startup" ID chkDELLOG  AT(6 30 AUTO AUTO) 
	CHECKBOX "Keep bytecode files"       ID chkDELSBVM AT(6 44 AUTO AUTO) 
	CHECKBOX "Use VMT for compilation"   ID chkSDKDRAW AT(6 58 AUTO AUTO) 

	LABEL "Compiler cache" ID 3000 6 77 FONT 1
	LABEL "    Label nodes" ID 3001 6 87
	FIELD ID fldCLABS1 AT(120 86 32 11) UNDERLINED USABLE RIGHTALIGN NUMERIC MAXCHARS 4

	LABEL "    Pass2 stack nodes" ID 3002 6 101
	FIELD ID fldCPASS2 AT(120 100 32 11) UNDERLINED USABLE RIGHTALIGN NUMERIC MAXCHARS 4

	BUTTON "OK"   		ID btnOK      6 120 40 12
	BUTTON "Cancel"		ID btnCANCEL 52 120 45 12
END

