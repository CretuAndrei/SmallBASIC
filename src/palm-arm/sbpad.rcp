ALERT ID ConfAlertID
CONFIRMATION
BEGIN
  TITLE "Warning"
  MESSAGE "^1^2^3"
  BUTTONS "Yes" "No"
END

ALERT ID InfoAlertID
INFORMATION
BEGIN
  TITLE "Warning"
  MESSAGE "^1^2^3"
  BUTTONS "OK"
END

ALERT ID AlertWantReset
CONFIRMATION
BEGIN
    TITLE "Reset Pilot?"
    MESSAGE "This database contains a flag which recommends that you perform a soft reset after it is installed. " \
			"A soft reset should not erase any data from your Pilot. Do you want to do this?"
    BUTTONS "Don't Reset" "Reset"
END

ALERT ID AlertArgOpen
CONFIRMATION
BEGIN
    TITLE "OpenDB"
	MESSAGE "You cannot open this type of database with SmallBASIC."
	BUTTONS "OK"
END

ALERT ID AlertCFontMB
CONFIRMATION
BEGIN
    TITLE "UTF8 Fonts"
	MESSAGE "You cannot use UTF8 fonts on multibyte PalmOS."
	BUTTONS "OK"
END

ALERT ID AlertMathLib
CONFIRMATION
BEGIN
    TITLE "Missing library"
	MESSAGE "Mathlib 1.1+ required"
	BUTTONS "OK"
END

